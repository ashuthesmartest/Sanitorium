<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="203.0" prefWidth="472.0"
            xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="com.controller.Dialog.ForgotPasswordDialogController">
    <children>
        <GridPane layoutX="8.0" layoutY="6.0" prefHeight="157.0" prefWidth="457.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label prefHeight="17.0" prefWidth="95.0" text="Enter your code:"/>
                <TextField fx:id="tfCode" prefHeight="25.0" prefWidth="278.0" GridPane.columnIndex="1"/>
                <Label prefHeight="17.0" prefWidth="95.0" text="New Password:" GridPane.rowIndex="1"/>
                <PasswordField fx:id="tfNewPass" prefHeight="25.0" prefWidth="278.0" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                <Label prefHeight="17.0" prefWidth="134.0" text="Confirm New Password:" GridPane.rowIndex="2"/>
                <PasswordField fx:id="tfConfirm" prefHeight="25.0" prefWidth="278.0" GridPane.columnIndex="1"
                               GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <Button fx:id="btOk" layoutX="320.0" layoutY="160.0" mnemonicParsing="false" onAction="#handleBtOk"
                prefHeight="25.0" prefWidth="59.0" text="Ok"/>
        <Button fx:id="btCancel" layoutX="399.0" layoutY="160.0" mnemonicParsing="false" onAction="#handleBtCancel"
                prefHeight="25.0" prefWidth="59.0" text="Cancel"/>
    </children>
</AnchorPane>
